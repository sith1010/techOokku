<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:id="@+id/row1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/so_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Services Offered"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/so_txt"
            android:background="#FFFFFF">

            <ImageView
            android:id="@+id/ac_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:src="@drawable/acservice" />


        <TextView
            android:id="@+id/ac_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_img"
            android:layout_marginTop="-20dp"
            android:paddingLeft="25dp"
            android:text="A/C Repair"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/calldriver_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/border_image"
            android:src="@drawable/calldriver" />

        <TextView
            android:id="@+id/cd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calldriver_img"
            android:layout_marginTop="-20dp"
            android:paddingLeft="25dp"
            android:text="Call Driver"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/it_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:src="@drawable/itservice" />

        <ImageView
            android:id="@+id/clean_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ac_img"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/acservice" />


        <ImageView
            android:id="@+id/event_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/calldriver_img"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/calldriver" />

        <ImageView
            android:id="@+id/service_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/it_img"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:src="@drawable/itservice" />
    </RelativeLayout>
</RelativeLayout>
